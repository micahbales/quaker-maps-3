{
    "extends": "tslint:recommended",
    "rules": {
        "curly": false,
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "trailing-comma": false,
        "quotemark": [true, "single"]
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}